{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".output/public"
      }
    },
    {
      "src": "server/main.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 900,
        "memory": 3008
      }
    }
  ],
  "routes": [
    {
      "src": "/api/process-clips",
      "dest": "/server/main.py"
    },
    {
      "src": "/api/clip-status/(.*)",
      "dest": "/server/main.py"
    },
    {
      "src": "/api/health",
      "dest": "/server/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "continue": true
    }
  ]
}
